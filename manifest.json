{
  "manifest_version": 2,
  "name": "Annote",
  "version": "0.1.0",
  "description": "A democratic annotation layer for the web",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "<all_urls>"
  ],
  "icons": {
    "48": "icon48.png",
    "96": "icon96.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Annote",
    "default_icon": {
      "48": "icon48.png",
      "96": "icon96.png"
    }
  }
}
